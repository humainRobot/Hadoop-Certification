-- References: 
http://www.hadoop.com/content/hadoop/en/developers/home/developer-admin-resources/get-started-with-hadoop-tutorial/exercise-1.html
https://sqoop.apache.org/docs/1.4.2/SqoopUserGuide.html

sqoop list-databases \
  --connect "jdbc:mysql://quickstart.cloudera:3306" \
  --username cloudera \
  --password cloudera

sqoop list-tables \
  --connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
  --username cloudera \
  --password cloudera

sqoop eval \
  --connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
  --username cloudera \
  --password cloudera \
  --query "select count(1) from order_items"

sqoop import-all-tables \
  -m 12 \
  --connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
  --username=cloudera \
  --password=cloudera \
  --warehouse-dir=/user/cloudera/sqoop_import
  
sqoop import-all-tables \
  --num-mappers 1 \
  --connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
  --username=cloudera \
  --password=cloudera \
  --hive-import \
  --hive-overwrite \
  --hive-database "sqoop_import_test" #You can choose the database tou want
  --create-hive-table \
  --compress \
  --compression-codec org.apache.hadoop.io.compress.SnappyCodec \
  --outdir java_files
  
sqoop import \
  --connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
  --username=cloudera \
  --password=cloudera \
  --table departments \
  --target-dir /user/root/departments

-- query and split-by
sqoop import \
  --connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
  --username=retail_dba \
  --password=cloudera \
  --query="select * from orders join order_items on orders.order_id = order_items.order_item_order_id where \$CONDITIONS" \
  --target-dir /user/cloudera/order_join \
  --split-by order_id \
  --num-mappers 4
